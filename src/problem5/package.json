{
  "name": "bookstore-api",
  "version": "1.0.0",
  "description": "A robust bookstore API with order management",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate src/database/migrations/InitialBookstore -d orm.config.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d orm.config.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d orm.config.ts",
    "seed": "ts-node -r tsconfig-paths/register src/database/seeds/index.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "sonar:setup": "chmod +x scripts/setup-sonarqube.sh && ./scripts/setup-sonarqube.sh",
    "sonar:start": "docker-compose -f docker-compose.sonarqube.yml up -d",
    "sonar:stop": "docker-compose -f docker-compose.sonarqube.yml down",
    "sonar:scan": "node sonar-project.js",
    "sonar:analyze": "npm run test:coverage && npm run sonar:scan"
  },
  "keywords": [
    "bookstore",
    "api",
    "crud",
    "express",
    "typescript",
    "postgresql",
    "typeorm",
    "jwt",
    "orders",
    "books"
  ],
  "author": "Cris",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.5.1",
    "@types/bcryptjs": "^2.4.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.5.0",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "sonarqube-scanner": "^4.3.0",
    "supertest": "^7.1.4",
    "testcontainers": "^11.5.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
